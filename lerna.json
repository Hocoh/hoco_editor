{
  "version": "1.1.0",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "packages/alignment_plugin",
        "packages/embed_plugin",
        "packages/image_plugin",
        "packages/link_plugin",
        "packages/list_plugin"
      ]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "demo/*"
  ]
}
